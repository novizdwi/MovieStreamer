@using PagedList.Mvc
@model PagedList.IPagedList<MovieStreamer.ViewModels.MovieViewModels>
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
@{
    ViewData["Title"] = ViewBag.PageName;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<table class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
    <thead> 
        <th class="th-sm">
            Title
        </th>
        <th class="th-sm">
            Description
        </th>
        <th class="th-sm">
            Action
        </th>
    </thead>
    <tbody>
        @if (Model != null)
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td><img src= "@Url.Content(item.ImageUrl)" alt="alternative text" sstyle="width-max:50px; height:auto;"/>
                        <br />
                        @Html.DisplayFor(modelItem => item.Title)</td>
                    <td>@Html.DisplayFor(modelItem => item.Description)</td>
                    <td>
                        <button id="btnEdit" type="button" class="btn btn-primary" onclick="btnSubscribe(@item.Id)">Subcribe</button>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>